@page
@model PublicForum.Pages.Topics.EditModel
@{
}
<form method="post">
    <div class="text-left">
        <div class="row">
            <div class="mb-3 col-md-6">
                <label asp-for="Topic.Title"></label>
                <input required class="form-control" asp-for="Topic.Title">
                <input hidden class="form-control" asp-for="Topic.Id">
                <input hidden class="form-control" asp-for="Topic.CriationUser">
                <input hidden class="form-control" asp-for="Topic.CriationDate">
            </div>
            <div class="mb-3 col-md-12">
                <label asp-for="Topic.Content"></label>
                <textarea required class="form-control" asp-for="Topic.Content" rows="6"></textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-md-1">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
            <div class="col-md-1">
                <a class="btn btn-danger" asp-page="/Index">Cancel</a>
            </div>
        </div>
    </div>
</form>